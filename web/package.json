    "@shopify/koa-shopify-auth": "^5.0.3",
    "@shopify/polaris": "^9.21.0",
    "@shopify/react-testing": "^4.1.0",
    "apollo-boost": "^0.4.9",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "isomorphic-fetch": "^3.0.0",
