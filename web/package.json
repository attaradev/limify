{
  "name": "shopify-app-boilerplate",
  "version": "3.0",
  "description": "Shopify app boilerplate with typescript and Shopify-cli 3x.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch './server/**/*' -e ts,js --exec npx ts-node ./server",
    "build": "NEXT_TELEMETRY_DISABLED=1 ./node_modules/.bin/next build && yarn tsc -b ./server",
    "start": "cross-env NODE_ENV=production node ./dist"
  },
  "author": "Lanre Popson",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.18.9",
